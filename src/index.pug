      <figure class='engagement__figure engagement__figure--1'>
        <img class='engagement__illustration engagement__illustration--1' id='engagement__illustration1' src='assets\img\livraison-1.jpg' srcset='assets\img\livraison-1-320.jpg 320w' sizes='100vw' alt="Agriculteur de Jambognac charcutier Gautier"/>
        <figcaption class='engagement__figcaption engagement__figcaption--1'>
          <label for='engagement__illustration1' class='engagement__description engagement__description--1'>La 4L de Jacky le livreur</label>
        </figcaption>
